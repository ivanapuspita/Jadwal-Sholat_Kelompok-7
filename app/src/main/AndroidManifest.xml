<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.jadwalsalat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Jadwal Salat Yogyakarta"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.JadwalSalat">


        <activity android:name="com.example.jadwalsalat.view.activity.SplashScreen"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.jadwalsalat.view.activity.MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <activity android:name="com.example.jadwalsalat.view.activity.MainActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        </activity>
        <activity android:name="com.example.jadwalsalat.view.activity.JadwalSalatDetailActivity"></activity>
        <activity android:name="com.example.jadwalsalat.view.activity.CatatanActivity"></activity>
        <activity android:name="com.example.jadwalsalat.view.activity.ReadCatatanActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        </activity>

    </application>

</manifest>